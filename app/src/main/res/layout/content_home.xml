<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            style="@style/contentHomeCardStyle"
            app:cardElevation="4dp"
            app:contentPadding="4dp">

            <LinearLayout style="@style/contentHomeCardLinearStyle">

                <ImageView
                    style="@style/contentHomeCardImageStyle"
                    android:src="@drawable/attendance" />
                <TextView
                    style="@style/contentHomeCardTextStyle"
                    android:text="Attendance" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/contentHomeCardStyle"
            app:cardElevation="4dp"
            app:contentPadding="4dp">

            <LinearLayout style="@style/contentHomeCardLinearStyle">

                <ImageView
                    style="@style/contentHomeCardImageStyle"
                    android:src="@drawable/report" />
                <TextView
                    style="@style/contentHomeCardTextStyle"
                    android:text="Report" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/contentHomeCardStyle"
            app:cardElevation="4dp"
            app:contentPadding="4dp">

            <LinearLayout style="@style/contentHomeCardLinearStyle">

                <ImageView
                    style="@style/contentHomeCardImageStyle"
                    android:src="@drawable/live" />
                <TextView
                    style="@style/contentHomeCardTextStyle"
                    android:text="Stream" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            style="@style/contentHomeCardStyle"
            app:cardElevation="4dp"
            app:contentPadding="4dp">

            <LinearLayout style="@style/contentHomeCardLinearStyle">

                <ImageView
                    style="@style/contentHomeCardImageStyle"
                    android:src="@drawable/problem" />
                <TextView
                    style="@style/contentHomeCardTextStyle"
                    android:text="Problems" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/contentHomeCardStyle"
            app:cardElevation="4dp"
            app:contentPadding="4dp">

            <LinearLayout style="@style/contentHomeCardLinearStyle">

                <ImageView
                    style="@style/contentHomeCardImageStyle"
                    android:src="@drawable/idea" />
                <TextView
                    style="@style/contentHomeCardTextStyle"
                    android:text="Ideas" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/contentHomeCardStyle"
            app:cardElevation="4dp"
            app:contentPadding="4dp">

            <LinearLayout style="@style/contentHomeCardLinearStyle">

                <ImageView
                    style="@style/contentHomeCardImageStyle"
                    android:src="@drawable/tracing" />
                <TextView
                    style="@style/contentHomeCardTextStyle"
                    android:text="Tracing" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>