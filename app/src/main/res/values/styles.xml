<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Custom theme -->
    <style name="HeyIndiaCustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeyIndiaCustomTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="HeyIndiaCustomTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Content home card style -->
    <style name="contentHomeCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Content home card child Linear layout style -->
    <style name="contentHomeCardLinearStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!-- Content home card child Image View Style -->
    <style name="contentHomeCardImageStyle">
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- Content home card child text view style -->
    <style name="contentHomeCardTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
